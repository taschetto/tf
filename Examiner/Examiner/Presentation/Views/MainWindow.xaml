<Window x:Class="Examiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Examiner" Height="350" Width="525">
  <Grid>
    <DockPanel>
      <Menu DockPanel.Dock="Top" Width="Auto" Height="Auto">
        <MenuItem Header="_Opções">
          <MenuItem Header="_Contexto">
            <MenuItem Header="_Professor" IsCheckable="True" IsChecked="False" />
            <MenuItem Header="_Aluno" IsCheckable="True"/>
            <MenuItem Header="_Administrador" IsCheckable="True" />
          </MenuItem>
          <Separator/>
          <MenuItem Header="_Sair"/>
        </MenuItem>
        <MenuItem Header="_Sobre" />
      </Menu>
      <StackPanel></StackPanel>
    </DockPanel>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
  </Grid>
</Window>