<Window x:Class="Examiner.Presentation.Views.ProfessorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProfessorWindow" Height="300" Width="300"
        xmlns:vm="clr-namespace:Examiner.Presentation.ViewModels"
        xmlns:vw="clr-namespace:Examiner.Presentation.Views">
  <Window.Resources>
    <DataTemplate DataType="{x:Type vm:ExamListViewModel}">
      <vw:ExamListView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CategoryListViewModel}">
      <vw:CategoryListView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:QuestionListViewModel}">
      <vw:QuestionListView />
    </DataTemplate>    
  </Window.Resources>
  <Grid Margin="10">
    <Button Command="{Binding OkCommand}" Content="OK" IsDefault="True" Margin="0,0,160,0" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" Grid.Column="1"/>
    <Button Command="{Binding CancelCommand}" Content="Cancel" IsCancel="True" Margin="0,0,80,0" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" Grid.Column="1"/>
    <Button Command="{Binding ApplyCommand}" Content="Apply" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" RenderTransformOrigin="0.587,6.091" Grid.Column="1"/>
  </Grid>
</Window>
